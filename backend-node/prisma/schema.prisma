generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  full_name    String
  hashed_password String
  role         String
  is_active    Boolean   @default(true)
  is_approved  Boolean   @default(false)
  created_at   DateTime  @default(now())
  audit_logs   AuditLog[] @relation("UserAuditLogs")
  teaching_subjects TeacherSubject[]
  enrolled_subjects StudentSubject[]
}

model Class {
  id            Int       @id @default(autoincrement())
  name          String
  academic_year String
  created_at    DateTime  @default(now())
  exams         Exam[]
}

model Subject {
  id         Int      @id @default(autoincrement())
  name       String
  code       String   @unique
  created_at DateTime @default(now())
  exams      Exam[]
  teacher_assignments TeacherSubject[]
  student_enrollments StudentSubject[]
}

model Exam {
  id         Int      @id @default(autoincrement())
  class_id   Int
  subject_id Int
  name       String
  exam_type  String   @default("exam")
  exam_code  String
  exam_file_path String?
  exam_file_name String?
  date       DateTime @default(now())
  created_at DateTime @default(now())
  class      Class    @relation(fields: [class_id], references: [id])
  subject    Subject  @relation(fields: [subject_id], references: [id])
  questions  Question[]

  @@unique([subject_id, exam_code])
}

model Question {
  id           Int      @id @default(autoincrement())
  exam_id      Int
  question_text String
  model_answer String
  key_points   String
  total_marks  Int
  rubric       String
  created_at   DateTime @default(now())
  exam         Exam     @relation(fields: [exam_id], references: [id])
  answers      StudentAnswer[]
}

model StudentAnswer {
  id             Int       @id @default(autoincrement())
  question_id    Int?
  exam_id        Int?
  student_name   String
  student_user_id Int?
  answer_text    String?
  answer_file_path String?
  answer_file_name String?
  submitted_at   DateTime  @default(now())
  question       Question? @relation(fields: [question_id], references: [id])
  exam           Exam?     @relation(fields: [exam_id], references: [id])
  ai_grade       AIGrade?
  final_grade    FinalGrade?
}

model AIGrade {
  id                 Int      @id @default(autoincrement())
  student_answer_id  Int      @unique
  awarded_marks      Float
  max_marks          Float
  matched_key_points String
  missing_key_points String
  feedback           String
  confidence         Float
  raw_response       String?
  created_at         DateTime @default(now())
  student_answer     StudentAnswer @relation(fields: [student_answer_id], references: [id])
}

model FinalGrade {
  id                 Int      @id @default(autoincrement())
  student_answer_id  Int      @unique
  teacher_id         Int
  awarded_marks      Float
  feedback           String?
  approved_at        DateTime @default(now())
  student_answer     StudentAnswer @relation(fields: [student_answer_id], references: [id])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  entity_type String
  entity_id  Int
  action     String
  actor_id   Int
  old_value  String?
  new_value  String?
  created_at DateTime @default(now())
  actor      User     @relation("UserAuditLogs", fields: [actor_id], references: [id])
}

model TeacherSubject {
  id         Int      @id @default(autoincrement())
  teacher_id Int
  subject_id Int
  study_notes  String?
  notes_file_path String?
  notes_file_name String?
  created_at DateTime @default(now())
  teacher    User     @relation(fields: [teacher_id], references: [id])
  subject    Subject  @relation(fields: [subject_id], references: [id])

  @@unique([teacher_id, subject_id])
}

model StudentSubject {
  id         Int      @id @default(autoincrement())
  student_id Int
  subject_id Int
  created_at DateTime @default(now())
  student    User     @relation(fields: [student_id], references: [id])
  subject    Subject  @relation(fields: [subject_id], references: [id])

  @@unique([student_id, subject_id])
}
